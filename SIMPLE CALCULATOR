num1=float(input("enter first number"))
num2=float(input("enter the second number"))
operation=input("enter the operation")
if operation =="+":
 print("result,num1+num2")
elif operation =="-":
 print("result,num1-num2") 
num1=float(input("enter first number"))
num2=float(input("enter the second number"))
operation=input("enter the operation")
if operation =="+":
 print("result",num1+num2)
elif operation =="-":
 print("result",num1-num2) 
elif operation =="*":
 print("result",num1*num2)
elif operation =="/":
 print("result",num1/num2)
